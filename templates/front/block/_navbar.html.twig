{% trans_default_domain 'front_messages' %}
{% set route = app.request.get('_route') %}

<div class="container-fluid fixed-top">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark-50 shadow-lg mb-4" role="navigation">
        {% if route == 'front_home' %}
            <h1 class="navbar-brand"><img src="{{ asset('img/forlifeproject.png') }}" alt="" class="nav-logo"><span>{{ name_site }}</span></h1>
        {% else %}
            <a class="navbar-brand" href="{{ path('front_home') }}"><img src="{{ asset('img/forlifeproject.png') }}" alt="{{ name_site }}" class="nav-logo"><span>{{ name_site }}</span></a>
        {% endif %}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    {% include "block/_contrib.html.twig" %}
                {% endif %}
                {% include 'block/_locale_switcher.html.twig' %}
            </ul>
            <div class="d-flex">
                <ul class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" id="dropdown_account" 
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {% if app.user.imageFilename %}
                            <span class="nav-img">
                                <span class="nav-img-circle">
                                    <img src="{{ asset('/uploads/img/'~ app.user.imageFilename) }}" alt="">
                                </span>
                            </span>
                            {% else %}
                                <i class="fas fa-user"></i>
                            {% endif %}
                            {{ 'nav.account'|trans() }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right bg-dark" aria-labelledby="dropdown_account">
                            {% if is_granted("ROLE_ADMIN") %}
                                <li class="dropdown-item{{ route == 'back_home' ? ' active' }}">
                                    <a href="{{ path('back_home') }}">
                                        <i class="fas fa-user-cog"></i> {{ 'nav.account_back'|trans() }}
                                    </a>
                                </li>
                            {% endif %}
                            <li class="dropdown-item{{ route == 'user_account' ? ' active' }}">
                                <a href="{{ path('user_account', { 'id': app.user.id }) }}">
                                    <i class="fas fa-user-cog"></i> {{ 'nav.account_profile'|trans() }}
                                </a>
                            </li>
                            <li class="dropdown-item">
                                <a href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt"></i> {{ 'nav.account_logout'|trans() }}
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" id="dropdown_account" 
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i> {{ 'nav.account_unknown'|trans() }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown_account">
                            <li class="dropdown-item{{ route == 'app_login' ? ' active' }}">
                                <a href="{{ path('app_login') }}">
                                    <i class="fas fa-sign-in-alt"></i> {{ 'nav.account_login'|trans() }}
                                </a>
                            </li>
                            <li class="dropdown-item{{ route == 'front_register' ? ' active' }}">
                                <a href="{{ path('front_register') }}">
                                    <i class="fas fa-user"></i> {{ 'nav.account_register'|trans() }}
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</div>