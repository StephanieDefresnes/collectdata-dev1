{% trans_default_domain 'front_messages' %}


<div class="accordion" id="accordionExample">
    <div class="card bg-transparent border-0">
        <div class="card-header d-flex justify-content-end p-0 bg-transparent shadow-none border-0" id="heading">
            <button class="btn btn-link px-3 mx-1 collapsed text-decoration-none"
                    type="button" data-toggle="collapse" data-target="#collapse"
                    aria-expanded="false" aria-controls="collapse">
                {{ 'contact.btn'|trans }}
            </button>
        </div>
            
        <div class="card bg-transparent shadow-none border-0">
            <div id="collapse" class="collapse" aria-labelledby="heading">
                <div class="card-body">
                    {% if app.user %}
                        
                        {{ form_start(form) }}
                            {{ form_errors(form) }}
                        
                            <div class="d-flex justify-content-start row mb-4">
                                <div class="col-md-2 col-12 mt-1">
                                    {{ form_label(form.subject) }}
                                    {{ form_errors(form.subject) }}
                                </div>
                                <div class="col-md-10 col-12">
                                    {{ form_widget(form.subject) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.message) }}
                                </div>
                            </div>
                    
                            <div class="d-flex justify-content-start">
                                {{ form_row(form.agreeEmail) }}
                            </div>

                            <div class="text-center mt-4">
                                <button class="btn btn-primary" type="submit">
                                    <i class="far fa-paper-plane"></i>
                                    <span class="px-1">{{ 'action.send'|trans({}, 'messages') }}</span>
                                </button>
                            </div>
                    
                            <div class="mt-4 pt-5">
                                {{ form_row(form.captcha) }}
                            </div>
                        {{ form_end(form) }}
                        
                    {% else %}
                        <div class="text-center text-secondary">
                        {{ 'contact.connect'|trans({
                            '%login%' : path('app_login'),
                            '%registrer%' : path('app_register') })|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>