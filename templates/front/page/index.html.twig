{% extends 'front/layout.html.twig' %}
{% trans_default_domain 'front_messages' %}

{% block subtitle %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('front_app', null, 'frontApp') }}
    {{ encore_entry_link_tags('index_app', null, 'frontApp') }}
{% endblock %}

{% block navbar %}{% endblock %}
        
{% block content %}
        
    <div class="text-center">
        <img src="{{ asset('img/forlifeproject.png') }}" alt="" id="home-logo">
        <h2 class="mt-1 mb-5 text-white">{{ name_site }}</h2>
    </div>


    <div class="row">
        <div class="col-md-8 col-12 m-auto text-white">
            <div class="d-block text-center">
                {% for lang in langs %}
                    <a href="/{{ lang.lang }}"
                       class="btn btn-outline-light m-1 text-capitalize select-lang">
                        <img src="{{ asset('img/flag/'~ lang.lang ~'.jpg') }}" width="16" height="12" alt="">
                        {{ lang.name|raw }}
                    </a>
                {% endfor %}
            </div>
            <div class="d-flex justify-content-center mt-4">
                <img src="{{ asset('img/earth.gif') }}" alt="" id="earth">
            </div>
        </div>
    </div>
            
{% endblock %}

{% block footer %}{% endblock %}