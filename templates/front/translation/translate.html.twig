{% extends 'front/layout.html.twig' %}
{% trans_default_domain 'user_messages' %}
{% set locale = app.request.locale %}

{% block title %}{{ translation.id ? 'translation.form.update'|trans() : 'translation.form.create'|trans() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('translation_create_app', null, 'frontApp') }}
{% endblock %}

{% block container %}
<div class="container-fluid my-5 py-5">
    
    {% block content %}
    <div class="row">

        <div class="col-lg-8 col-12 mx-auto mt-5 p-0">
            
            <div class="card my-4 mx-3 bg-none shadow">

                <div class="card-header p-3 bg-dark text-white">
                    <div class="d-flex justify-content-center">
                        <h5 class="mb-2 pb-1">
                            {% if translation.id %}
                                {{ 'translation.form.update'|trans() }}
                            {% else %}
                                {{ 'translation.form.create'|trans() }}
                            {% endif %}
                        </h5>
                    </div>
                    <div class="d-flex justify-content-center">
                        <span class="h6 px-1">{{ 'translation.form.environnement'|trans() }} {{ referent.name }}</span>
                        <span class="h6 px-1"> - </span>
                        <span class="h6 px-1">{{ 'translation.form.in'|trans() }} {{ langName }}</span>
                    </div>
                </div>
        
                {% include "form/translation.html.twig" %}
                        
            </div>
        
        </div>

    </div>
    {% endblock %}
    
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('translation_create_app', null, 'frontApp') }}
{% endblock %}