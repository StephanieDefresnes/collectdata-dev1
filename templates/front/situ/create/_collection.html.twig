{% trans_default_domain 'user_messages' %}

{% block app_situ_items_widget %}
<div {{ block('widget_container_attributes') }} class="situItem d-inline">
    <div class="d-flex justify-content-between row mx-0 pt-2 pb-3 border-top border-secondary option-hide">
        <div class="col-10 px-0">
            <div class="row">
                <legend class="col-12 col-form-label">{{ 'contrib.form.item.label_item'|trans }}</legend>
                <div class="col-12">
                    <div class="row">
                        <div class="col-6 score-group">
                            {{ form_widget(form.score) }}
                        </div>
                        <div class="auto py-2">
                            <span class="score-info"
                                  data-toggle="tooltip" data-placement="right"
                                  title="{{ 'contrib.form.item.score.tooltip'|trans }}">
                                <i class="far fa-question-circle"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2 col-remove px-0 pt-2 text-right">
            <span class="btn btn-outline-danger removeSituItem">
                <i class="far fa-trash-alt"></i>
            </span>
        </div>
    </div>
    <div class="pb-3">
        {{ form_widget(form.title) }}
    </div>
    <div class="pb-4">
        {{ form_widget(form.description) }}
    </div>
</div>
{% endblock app_situ_items_widget %}