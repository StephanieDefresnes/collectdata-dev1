{% trans_default_domain 'user_messages' %}

{% block app_situ_items_widget %}
<div class="col-12" {{ block('widget_container_attributes') }}>
    <div class="d-flex justify-content-between pt-2 pb-3 row option-hide">
        <div class="col-10">
            <div class="row">
                <legend class="col-12 col-form-label">{{ 'contrib.form.item.label_item'|trans() }}</legend>
                <div class="col-12">
                    <div class="row">
                        <div class="col-6 score-group">
                            {{ form_widget(form.score) }}
                        </div>
                        <div class="auto py-2">
                            <span class="score-info"
                                  data-toggle="tooltip" data-placement="right"
                                  title="{{ 'contrib.form.item.score.tooltip' | trans }}">
                                <i class="far fa-question-circle"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2 col-remove pt-2 text-right"></div>
    </div>
    <div class="pb-3">
        {{ form_widget(form.title) }}
    </div>
    <div class="pb-4  border-bottom border-secondary">
        {{ form_widget(form.description) }}
    </div>
</div>
{% endblock app_situ_items_widget %}