{% extends 'front/layout.html.twig' %}
{% trans_default_domain 'user_messages' %}

{% set locale = app.request.locale %}


{% block title %}{{ 'contrib.title'|trans() }}{% endblock %}

{% block content %}
    {% block banner%}
        <div class="container py-4">
            <h1 class="h3 mb-0 font-weight-normal">{{ 'contrib.title'|trans() }}</h1>
        </div>
    {% endblock %}
    
    {% if situs is empty %}
        <div class="container mb-5 pb-5">
            {{ 'account.no_contrib'|trans() }}
        </div>        
    {% else %}
        <div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">{{ 'contrib.table.id'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.title'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.description'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.date_creation'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.date_last_update'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.date_submission'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.category_level1'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.category_level2'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.lang'|trans() }}</th>
                        <th scope="col">{{ 'contrib.table.actions'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for situ in situs %}
                    <tr>
                        <th scope="row"></th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}