{% set route = app.request.attributes.get('_route') %}
{% set route_params = app.request.attributes.get('_route_params') %}
{% set locale = app.request.locale %}
{% set applocales=locales|split('|') %}
<!DOCTYPE html>
<html lang="{{ locale }}"
    {% for locale in applocales %}
        {% if  (locale == app.request.locale and app.request.locale == 'ar')
            or (locale == app.request.locale and app.request.locale == 'he')
            or (locale == app.request.locale and app.request.locale == 'ur') %}
            dir="rtl"
        {% endif %}
    {% endfor %}>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0,shrink-to-fit=no">
        <meta name="author" content="Seds - TwXDesign">
        <title translate="no">{% block title %}{{ name_site }}{% endblock %}{% block subtitle %} - FLP{% endblock %}</title>
        <meta name="description" content="{% block description %}{{ '' }}{% endblock %}" />
        <link rel="icon" type="image/png" href="{{ asset('img/forlifeproject.png')}}" />
        {% block stylesheets %}{% endblock %}
    </head>
    {% block body %}{% endblock %}
</html>
 