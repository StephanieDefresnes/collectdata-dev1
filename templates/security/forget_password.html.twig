{% trans_default_domain 'security' %}
{% extends 'front/layout.html.twig' %}

{% block title %}{{ 'forget_password.title'|trans() }}{% endblock %}

{% block content %}
<section class="mt-5 py-5">
    <div class="container">
        <div class="col-lg-6 mx-auto">
            <div class="card mt-4 mb-4 px-3 pt-2 bg-light-80">
                <div class="card-body">
                    {{ form_start(form) }}
                        <h1 class="h3 mb-3 font-weight-normal">{{ 'forget_password.h1'|trans() }}</h1>
                        <p class="small">{{ 'forget_password.descritpion'|trans() }}</p>
                        {{ form_row(form.email) }}
                        <div class="form-group text-center">
                            <button class="btn btn-secondary px-5" type="submit">
                                {{ 'forget_password.btn.submit'|trans() }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
