{% trans_default_domain 'security' %}
{% extends 'front/layout.html.twig' %}

{% block title %}{{ 'reset_password.title'|trans() }}{% endblock %}

{% block content %}
    <div class="col-lg-6 mx-auto pt-5">
        <div class="card mt-5 mb-4 px-3 pt-2 bg-light-80">
            <div class="card-body pb-1">
                <h1 class="h3 mb-3 font-weight-normal">{{ 'reset_password.h1'|trans() }}</h1>
                {{ form_start(form) }}
                    {% if form.password is defined %}
                        {{ form_row(form.password) }}
                    {% endif %}
                    {{ form_row(form.plainPassword) }}
                    <div class="form-group text-center mt-4 py-2">
                    {% if app.user %}
                        <a href="{{ path('user_account') }}" class="btn btn-light mx-2">
                            {{ 'reset_password.btn.back'|trans() }}
                        </a>
                    {% endif %}
                        <button class="btn btn-secondary mx-2 px-4" type="submit">
                            {{ 'reset_password.btn.submit'|trans() }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}