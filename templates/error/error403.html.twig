{% extends 'front/layout.html.twig' %}
{% trans_default_domain 'front_messages' %}

{% block title %}Forbidden{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('front_app', null, 'frontApp') }}
{% endblock %}

{% block body %}
    <body id="page" class="bg-dark">
        
        {% block navbar %}{% endblock %}
    
        <div class="container my-5 py-5">
            
            {% block content %}

                <div class="text-center">
                    <a href="{{ path('index') }}" class="text-decoration-none">
                        <img src="{{ asset('img/forlifeproject.png') }}" alt="" width="50">
                        <h2 class="mt-1 text-white">{{ name_site }}</h2>
                    </a>
                </div>
                
                <div class="row  mt-3 mb-5 pt-5">
                    <div class="col-md-8 col-12 m-auto p-4 bg-white text-center">
                        <h1>Forbidden</h1>
                        <p class="h1"><i class="fas fa-eye-slash"></i></p>
                    </div>
                </div>

            {% endblock %}
            
        </div>
            
        {% block footer %}{% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('front_app', null, 'frontApp') }}
        {% endblock %}
    </body>
{% endblock %}