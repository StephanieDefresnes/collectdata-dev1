{% trans_default_domain 'user_messages' %}

{% block app_lang_translation_create_widget %}
<div {{ block('widget_container_attributes') }}>
    <div class="d-flex justify-content-between row mx-0 pt-2  option-hide">
        <div class="col-6 px-0">
            {{ form_row(form.type) }}
        </div>
        <div class="col-auto col-remove pr-0 pt-1 text-right">
            <span class="btn btn-outline-danger removeField">
                <i class="far fa-trash-alt"></i>
            </span>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        <div class="form-error">
            {{ form_errors(form.name) }}
        </div>
    </div>
</div>
{% endblock app_lang_translation_create_widget %}