{% trans_default_domain 'back_messages' %}
{% extends "back/layout.html.twig" %}

{% block title %}{{ 'user.create.title'|trans() }}{% endblock %}

{% block content %}
    <div class="container-fluid pt-4">
        
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">{{ 'user.create.title'|trans() }}</h1>
        </div>

        <div class="col-lg-8 offset-lg-2 col-12 offset-0 px-0">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">{{ 'user.create.h2'|trans() }}</h6>
                </div>
                {{ form_start(form) }}
                <div class="card-body pb-3 row">
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.roles) }}
                    </div>
                    <div class="{% if is_granted("ROLE_MODERATOR")
                                    and not is_granted("ROLE_SUPER_ADMIN")
                                    and not is_granted("ROLE_ADMIN")
                                %}col-md-12 mb-2{% else %}col-md-6 mt-md-5 mt-3{% endif %}">
                        <div class="d-flex justify-content-center row">
                            <div class="col-auto">
                                <button class="btn btn-primary btn-block">
                                    <i class="far fa-paper-plane"></i> {{ 'button.submit'|trans() }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        
    </div>
{% endblock %}