{% trans_default_domain 'back_messages' %}

<div id="card-list" class="card shadow mb-4">
    
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">{{ 'contrib.situ.list'|trans() }}</h6>
    </div>
    
    <div id="situs" class="card-body pb-3 back-dataTable">
        
        {% if situs is empty %}
            {{ 'contrib.situ.table.empty'|trans() }}
        {% else %}
            
        <table id="dataTable-list" class="table table-sm mb-0 nowrap">
            <thead class="bg-gray-600 text-white">
                <tr>
                    <th class="no-sort">{{ 'action.action'|trans() }}</th>
                    <th class="pl-2 text-center">#</th>
                    <th class="pl-2">{{ 'label.title'|trans() }}</th>
                    <th class="pl-2">{{ 'status.title'|trans() }}</th>
                    <th class="pl-2">{{ 'status.date_creation'|trans() }}</th>
                    <th class="pl-2">{{ 'status.date_submit'|trans() }}</th>
                    <th class="pl-2">{{ 'status.date_validate'|trans() }}</th>
                    <th class="pl-2">{{ 'label.lang'|trans() }}</th>
                    <th class="pl-2">{{ 'label.initial'|trans() }}</th>
                    <th class="pl-2">{{ 'label.event'|trans() }}</th>
                    <th class="pl-2">{{ 'label.catLevel1'|trans() }}</th>
                    <th class="pl-2 text-nowrap">{{ 'label.catLevel2'|trans() }}</th>
                </tr>
            </thead>
            <tbody class="bg-white">
                {% for situ in situs %}
                <tr>
                    <td class="px-2 align-middle">
                        {% if situ.statusId == 2 %}
                            <a href="{{ path('back_situ_verify', { 'id': situ.id }) }}"
                               class="btn btn-outline-warning pcx-2 py-1"
                               data-id="{{ situ.id }}" data-action=""
                               data-toggle="tooltip" data-placement="left"
                               title="{{ 'action.validate'|trans() }}">
                                <i class="far fa-paper-plane"></i>
                            </a>                            
                        {% else %}
                            <a href="{{ path('back_situ_read', { 'id': situ.id }) }}"
                               class="btn {%if situ.statusId == 4 or  situ.statusId == 5 %}btn-outline-danger{% else %}btn-outline-primary{% endif %} px-2 py-1"
                               data-id="{{ situ.id }}" data-action=""
                               data-toggle="tooltip" data-placement="left"
                               title="{{ 'action.read'|trans() }}">
                                <i class="fas fa-eye"></i>
                            </a>
                            {% if situ.statusId == 5 %}
                                <a href=""
                                   class="btn btn-danger px-2 py-1"
                                   data-id="{{ situ.id }}" data-action=""
                                   data-toggle="tooltip" data-placement="left"
                                   title="{{ 'action.delete_definitively'|trans() }}">
                                    <i class="far fa-trash-alt"></i>
                                </a>                            
                            {% endif %}
                        {% endif %}
                        
                    </td>
                    <td class="px-2 align-middle text-center">{{ situ.id }}</td>
                    <td class="px-2 align-middle firstletter text-nowrap">{{ situ.title|u.truncate(20, '...') }}</td>
                    <td class="px-2 align-middle text-nowrap">
                        {% if situ.statusId == 1 %}
                            {{ 'status.writing'|trans() }}
                        {% elseif situ.statusId == 2 %}
                            {{ 'status.validation'|trans() }}
                        {% elseif situ.statusId == 3 %}
                            {{ 'status.validated'|trans() }}
                        {% elseif situ.statusId == 4 and situ.initialSitu == 1 %}
                            {{ 'status.refused'|trans() }}
                        {% elseif situ.statusId == 4 and situ.initialSitu == 0 %}
                            {{ 'status.translation_refused'|trans() }}
                        {% else %}
                            {{ 'status.deleted'|trans() }}
                        {% endif %}
                    </td>
                    <td class="px-2 align-middle">{{ situ.dateCreation|format_datetime('short', 'none', locale=locale) }}</td>
                    <td class="px-2 align-middle">{{ situ.dateSubmission ? situ.dateSubmission|format_datetime('short', 'none', locale=locale) : '' }}</td>
                    <td class="px-2 align-middle">{{ situ.dateValidation ? situ.dateValidation|format_datetime('short', 'none', locale=locale) : '' }}</td>
                    <td class="px-2 align-middle">{{ situ.lang.englishName }}</td>
                    <td class="px-2 align-middle text-nowrap">
                        {% if situ.initialSitu %}
                            {{ 'yes'|trans() }}
                        {% else %}
                            <span class="id">{{ situ.translatedSituId }}</span>
                        {% endif %}
                    </td>
                    <td class="px-2 align-middle text-nowrap">
                        {% if situ.event.validated %}
                            {{ situ.event.title|u.truncate(20, '...') }}
                        {% else %}
                            {{ situ.event.title|u.truncate(10, '...') }}
                            <span class="badge badge-pill badge-primary">{{ 'badge.new'|trans() }}</span>
                        {% endif %}
                    </td>
                    <td class="px-2 align-middle text-nowrap">
                        {% if situ.categoryLevel1.validated %}
                            {{ situ.categoryLevel1.title|u.truncate(20, '...') }}
                        {% else %}
                            {{ situ.categoryLevel1.title|u.truncate(10, '...') }}
                            <span class="badge badge-pill badge-primary">{{ 'badge.new'|trans() }}</span>
                        {% endif %}
                    </td>
                    <td class="px-2 align-middle text-nowrap">
                        {% if situ.categoryLevel2.validated %}
                            {{ situ.categoryLevel2.title|u.truncate(20, '...') }}
                        {% else %}
                            {{ situ.categoryLevel2.title|u.truncate(10, '...') }}
                            <span class="badge badge-pill badge-primary">{{ 'badge.new'|trans() }}</span>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>            
        {% endif %}
    </div>
</div>
