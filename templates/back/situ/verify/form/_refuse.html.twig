{% trans_default_domain 'back_messages' %}

<div class="modal fade" id="refuseModal" translate="no"
     data-backdrop="static" data-keyboard="false" tabindex="-1"
     aria-labelledby="refuseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="refuseModalLabel">
                    {{ 'contrib.situ.verify.form.modal.refuse.title'|trans() }}
                </h5>
            </div>

            <div class="modal-body">
                <p class="text-center mb-4">{{ 'contrib.situ.verify.form.modal.refuse.question'|trans() }}</p>

                <div class="row mb-4">
                    <div class="col-md-auto">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="eventRefuse">
                            <label class="form-check-label" for="eventRefuse">
                                {{ 'contrib.situ.verify.form.modal.refuse.event'|trans() }}
                            </label>
                        </div>
                    </div>
                    <div class="col-md-auto">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="categoryLevel1Refuse">
                            <label class="form-check-label" for="categoryLevel1Refuse">
                                {{ 'contrib.situ.verify.form.modal.refuse.categoryLevel1'|trans() }}
                            </label>
                        </div>
                    </div>
                    <div class="col-md-auto">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="categoryLevel2Refuse">
                            <label class="form-check-label" for="categoryLevel2Refuse">
                                {{ 'contrib.situ.verify.form.modal.refuse.categoryLevel2'|trans() }}
                            </label>
                        </div>
                    </div>
                    <div class="col-md-auto">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="situRefuse">
                            <label class="form-check-label" for="situRefuse">
                                {{ 'contrib.situ.verify.form.modal.refuse.situ'|trans() }}
                            </label>
                        </div>
                    </div>
                    <div class="col-md-auto">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="itemsRefuse">
                            <label class="form-check-label" for="itemsRefuse">
                                {{ 'contrib.situ.verify.form.modal.refuse.items'|trans() }}
                            </label>
                        </div>
                    </div>
                </div>
                       
                <div class="row mb-4">         
                    <div class="col-md-5">
                        <select id="event-reason" class="form-control">
                            <option value="">{{ 'contrib.situ.verify.form.modal.refuse.select.placeholder'|trans() }}</option>
                            <option value="">{{ 'contrib.situ.verify.form.modal.refuse.select.inappropriate'|trans() }}</option>
                            <option value="">{{ 'contrib.situ.verify.form.modal.refuse.select.create'|trans() }}</option>
                            <option value="">{{ 'contrib.situ.verify.form.modal.refuse.select.other'|trans() }}</option>
                        </select>
                        <small class="px-1">{{ 'contrib.situ.verify.form.modal.refuse.comment.title'|trans() }}</small>
                    </div>
                    <div class="col-md-7">
                        <textarea id="otherRefuse" class="form-control"  rows="5"
                                  placeholder="{{ 'contrib.situ.verify.form.modal.refuse.comment.textarea'|trans() }}"></textarea>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    {{ 'button.cancel'|trans() }}
                </button>
                <button type="button" class="btn btn-primary">
                    {{ 'button.confirm'|trans() }}
                </button>
            </div>

        </div>
    </div>
</div>