{% trans_default_domain 'messages' %}

<div class="card-header rounded-0 bg-dark-50 text-white">
    <div class="d-flex justify-content-start font-weight-bold">
        {{ 'message.read.date'|trans({ 
                        '%user%': message.senderUser.name,
                        '%date%': message.dateCreate|format_datetime('short', 'short', locale=locale)
                    }, 'messenger_messages') }}
    </div>
</div>
<div class="card-body">

    <div class="d-flex justify-content-start mb-3">
        <span class="font-weight-bold">{{ 'label_dp.subject'|trans }}</span>
        <span class="px-2">{{ message.subject }}</span>
    </div>

    <div class="d-flex justify-content-start font-weight-bold">
        {{ 'label_dp.message'|trans }}
    </div>
    <div class="p-2">
        {{ message.text|trans({'%url%': path('create_situ', { 'id': message.entityId })})|raw|nl2br }}
    </div>
</div>

